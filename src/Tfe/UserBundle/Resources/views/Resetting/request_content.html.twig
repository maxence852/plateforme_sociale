{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
        <div class="fos_user_user_show">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-default" >
                            <div class="panel-heading">RÃ©initialiser son mot de passe</div>
                                <div class="panel-body">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                                <form  class="fos_user_resetting_request form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST" >
                                                    <div>
                                                        {% if invalid_username is defined %}
                                                            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                                                        {% endif %}

                                                        <div class="form-group">
                                                            <label class="col-md-5 control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                                                                <div class="col-md-6">
                                                                    <input type="text" class="form-control" id="username" name="username" required="required" />
                                                                </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-6 col-md-offset-4">
                                                            <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                                                        </div>
                                                    </div>
                                                </form>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}