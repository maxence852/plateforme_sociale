{% trans_default_domain 'FOSUserBundle' %}
<div style="margin-bottom: 10px" >
<a class="btn btn-primary btn-lg" href="{{ path('fos_user_profile_edit') }}">Editer son profil</a>
<a class="btn btn-primary btn-lg" href="{{ path('fos_user_change_password') }}">Changer son mot de passe</a>
<a class="btn btn-danger btn-lg" href="{{ path('tfe_user_delete',{'id' : user.id }) }}">Supprimer son compte </a>
</div>

