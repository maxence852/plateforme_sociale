{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
<div class="container">
    <div class="fos_user_user_show">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default" >
                    <div class="panel-heading">RÃ©iniatialiser son mot de passe</div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                                <div class="form-group">
                                    {{ form_start(form, {'method': 'post'}) }}
                                    {{ form_errors(form) }}
                                    <div class="form-group">
                                        {{ form_label(form.current_password,"", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                            <div class="col-md-6">
                                                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        {{ form_errors(form.current_password) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(form.plainPassword.first,"", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        {{ form_errors(form.plainPassword.first) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(form.plainPassword.second,"", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        {{ form_errors(form.plainPassword.second) }}
                                    </div>


                                    {{ form_rest(form) }}
                                        {{ form_widget(form) }}
                                    <div class="col-md-6 col-md-offset-4">
                                        <div>
                                            <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>


{% endblock fos_user_content %}