
{% extends "TfePlatformSocialeBundle::index.html.twig" %}


{% block body %}

<div class="container">
    <div class="fos_user_user_show">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default" >
                    <div class="panel-heading">Editer commentaire</div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                {{ form_start(form, {'method': 'post'}) }}
                                {{ form_errors(form) }}

                                <div class="form-group">
                                    {{ form_label(form.body,"Commentaire", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                    <div class="col-md-8">
                                        {{ form_widget(form.body, {'attr': {'class': 'form-control ckeditor'}}) }}
                                    </div>
                                    {{ form_errors(form.body) }}
                                </div>

                                <div class="col-md-6 col-md-offset-4">
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_rest(form) }}
    {{ form_widget(form)  }}
    {{ form_end(form) }}



{% endblock %}