{% extends "TfePlatformSocialeBundle::index.html.twig" %}

{% block title %}
    Page des publications - {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
    <style rel="stylesheet">/* obligé de faire comme sa car l'autre csss va pas'*/
        #bordurePublication
        {
            height: auto;
            border: 2px solid #F5871F;
            margin-left: 350px;
            margin-right: 350px;
        }
        #titrePublication
        {
            color: #0088CC;
            padding-top: 15px;
            padding-bottom: 30px;
        }
        #contenuPublication
        {
            height: auto;
            padding-bottom: 30px;
            word-wrap: break-word;
        }

    </style>
    {% endblock %}
{% block body %}


    {% for publications in publication %}
        <div>
            <dl class="text-center" id="bordurePublication">
                <dt id="titrePublication">{{ publications.titrePublication }}</dt>
                <dd id="contenuPublication">{{ publications.contentPublication|raw|nl2br }}</dd> <!--lenl2br permet d'afficher les retour à la ligne et raw permet d'afficher de bien afficher les rendu sans balise html pour le visiteur-->
            </dl>
        </div>
        {% endfor %}

    <div class="container">
        <div class="fos_user_user_show">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-default" >
                        <div class="panel-heading">Créer une nouvelle publication</div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    {{ form_start(form, {'method': 'post'}) }}
                                    {{ form_errors(form) }}

                                    <div class="form-group">
                                        {{ form_label(form.titrePublication,"Titre", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(form.titrePublication, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        {{ form_errors(form.titrePublication) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.contentPublication,"Publication", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                                        <div class="col-md-8">
                                            {{ form_widget(form.contentPublication, {'attr': {'class': 'form-control ckeditor'}}) }}
                                        </div>
                                        {{ form_errors(form.contentPublication) }}
                                    </div>

                                    <div class="col-md-6 col-md-offset-4">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_widget(form)  }}
    {{ form_end(form) }}

    {{'[b]Bold text[/b]'|bbcode_filter('my_default_filter')}}
    {{'[u]Underlined text[/u]'|bbcode_filter('my_default_filter')}}
    {{'[i]Italic text[/i]'|bbcode_filter('my_default_filter')}}
{% endblock %}