{# On utilise ici le layout général, qui se situe dans ce même CoreBundle maintenant #}
{% extends "TfeCoreBundle::layout.html.twig" %}

{% block title %}
    Page d'accueil - {{ parent() }}
{% endblock %}

{% block header %}
    <nav class="navbar navbar-default" style="background-color: #404040">
        <div class="container">
            <div class="navbar-header">

                <!-- Collapsed Hamburger -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- Branding Image -->
                <a class="navbar-brand" href="{{ path('tfe_platform_sociale_publication') }}" style="color: white" >Accueil</a>
            </div>

            <div class="collapse navbar-collapse" id="app-navbar-collapse">
                <!-- Left Side Of Navbar -->
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('tfe_forum_homepage') }}" style="color: white">Forum</a></li>
                </ul>

                <ul class="nav navbar-nav">
                    <li><a href="{{ path('tfe_user_communaute') }}" style="color: white">Communauté</a></li>
                </ul>
                <!-- Right Side Of Navbar -->
                <ul class="nav navbar-nav navbar-right">
                    <!-- Authentication Links -->
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <li><a href="{{ path('fos_user_security_logout') }}" style="color: white">Deconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}" style="color: white">Connexion</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}" style="color: white">inscription</a></li>
                    {% endif %}
                    <li class="dropdown" style="background-color: #404040">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="color: white">
                            {{ app.user.username }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" style="background-color: #404040">
                            <li><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-btn"></i>Paramètre du compte</a></li>
                        </ul>
                        {% endif %}
                </ul>
            </div>
        </div>

    </nav>
    {% endblock %}

{% block body %}
<h2>Ici est la plateforme-sociale</h2>

{% endblock %}

{% block footer %}
   <footer><p>Site réalisé par Begon Maxence et Messina Dorian</p></footer>
{% endblock %}